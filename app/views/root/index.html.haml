- content_for(:header) do
  %header.landing
    .container
      %ul
        - if logged_in?
          %li.rightmost= link_to 'Logout', logout_path, method: :delete
        - else
          %li.rightmost= link_to 'Login', login_path
        .clear
    #action
      .logo
      .text
        %h1.white Connecting non-profits in San Francisco District 6.
        = link_to 'Sign up now!', org_signup_path, class: [:btn, :large]

#tags
  .tag.selected ALL
  - for tag in @tags
    .tag>= tag.name