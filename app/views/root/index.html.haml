- content_for(:header) do
  %header.landing
    .container
      %ul
        - if logged_in?
          %li.rightmost= link_to 'Logout', logout_path, method: :delete, remote: true
        - else
          %li.rightmost= link_to 'Login', login_path, remote: true
          %li= link_to 'Register', org_register_path, remote: true
      .clear
    #action
      .logo It's Your District
      .text
        %h1.white Connecting non-profits in San Francisco District 6.
        = link_to 'Sign up now!', org_register_path, class: [:register, :btn, :large], remote: true

#tags
  .tag.selected ALL
  - for tag in @tags
    .tag>= tag.name