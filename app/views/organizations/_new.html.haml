- content_for(:js) do
  :javascript
    App.errors = #{@errors.to_json}

%h2 Register Organization
= form_tag org_path, multipart: true do
  - if not @errors or @errors.empty?
    %p 
      Fields marked
      %strong *
      are required.
  - else
    %p.error There are problems with your registration form. Please fix the errors below and try again.
  .form-row
    %label
      Email
      %strong *
    = text_field :org, :email, placeholder: 'myname@mywebsite.com'
    .note This email will be used for contact and login purposes.
  .form-row
    %label
      Password
      %strong *
    = password_field :org, :password
  .form-row
    %label
      Password Confirmation
      %strong *
    = password_field :org, :password_confirmation
  .form-row
    %label
      Name
      %strong *
    = text_field :org, :name, placeholder: 'My Organization'
    .note The name of your organization.
  .form-row
    %label Contact
    = text_field :org, :contact, placeholder: 'Jane Doe'
    .note The contact person.
  .form-row
    %label Website
    = text_field :org, :website, placeholder: 'www.mywebsite.com'
  .form-row
    %label Phone Number
    = text_field :org, :phone, placeholder: '415-555-5555'
  .form-row
    %label
      Mission
      %strong *
    = text_area :org, :summary, placeholder: 'itsyourdistrict.org is a comprehensive...'
    .note A brief statement of your organization's Mission.
  .form-row
    %label
      Image
      %strong *
    .form-link
      %span.file-name
      %a.select-file Select Image...
    = file_field :image, :image
  .form-row
    = label_tag :tags
    .clear
    - for tag in @tags
      .tag
        = check_box_tag "tag_#{tag.name.downcase}", tag.name, false, :name => 'tags[]'
        = tag.name
  = submit_tag "Register", class: [:btn, :'form-submit']