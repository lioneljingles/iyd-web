%h2 Login
= form_tag login_path do
  .form-row
    = label_tag :email
    = text_field_tag :email, params[:email]
  .form-row
    = label_tag :password
    = password_field_tag :password
  = link_to 'Forgot Password?', reset_path, id: 'reset-password'
  = submit_tag "Login", class: [:btn, :'form-submit']