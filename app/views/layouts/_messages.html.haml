- flash.each do |name, msg|
  %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
    %a.close{:'data-dismiss'=>'alert'} &#215;
    - if msg.is_a?(String)
      = content_tag :div, msg, :id => "flash_#{name}"
    - elsif msg.is_a?(Array)
      - msg.each do |m|
        = content_tag :div, m, :class => "flash_#{name}"