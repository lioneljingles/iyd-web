!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : 'It\'s Your District!'
    = stylesheet_link_tag :application, media: "all", :'data-turbolinks-track' => true
    %link{href: 'http://fonts.googleapis.com/css?family=Roboto:300,700|Sanchez:400italic,400', rel:'stylesheet', type:'text/css'}
    %link{rel: 'icon', type:'image/png', href: image_path('favicon.png')}
    = csrf_meta_tags
    = yield(:head)
    
  %body
    #overlay
      .close
      .content
    %header
      .container
        - if content_for?(:header)
          = yield(:header)
        - else
          %ul.nav
            %li#logo= link_to 'It\'s Your District', root_path
            %li.fb= link_to 'Visit us on Facebook!', 'https://www.facebook.com/itsyourdistrict', target: '_blank'
          = render('layouts/nav')
    #content
      - if content_for?(:notice)
        #notice
          = yield(:notice)
      = yield
    = render 'layouts/footer'
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = yield(:js)